@{
    ViewData["Title"] = "Home Page";
}
<div class="index">
    <component type="typeof(IndexPhoneDeleteInsert)" render-mode="ServerPrerendered"/>
    <div class="indexComponent">
        <form id="formCalcPrice">
            <div>
                <label>First phone:</label>
                <input class="form-control" type="text" id="nameOnePhone" value="IPhone10"/>
            </div>
            <div>
                <label>Second phone:</label>
                <input class="form-control" type="text" id="nameSecondPhone" value="IPhone8"/>
            </div>
            <input type="submit" class="btn btn-primary" id="calcPrice" value="Calculate price"/>
            <p style="font-size: 14pt">Price: <label id="resPrice">0</label></p>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="_framework/blazor.server.js"></script>
}






