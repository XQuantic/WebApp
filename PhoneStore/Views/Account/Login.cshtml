@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="loginForm">
    <form method="post" asp-action="Login" asp-controller="Account">
        <a asp-action="Register" asp-controller="Account">Register</a>
        <div>
            <label asp-for="Email">Enter Email</label>
            <input class="form-control" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password">Enter Password</label>
            <input class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="Remember">Remember me?</label><br/>
            <input asp-for="Remember"/>
        </div>
        <input class="btn btn-primary" type="submit" value="Login"/>
    </form>
</div>
